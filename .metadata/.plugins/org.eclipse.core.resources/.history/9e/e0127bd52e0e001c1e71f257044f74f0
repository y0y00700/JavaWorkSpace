	public BookRent() {
		try {
			String query="select s.id,b.no,b.title,br.rdate from student s book b bookrent br where s.id=br.id and b.no=br.bookno";
			
		}catch(Exception e) {
			e.printStackTrace();
		}
		this.setLayout(null);
		JLabel l_dept=new JLabel("학과");
		l_dept.setBounds(10, 10, 30, 20);
		
		String[] dept= {"전체","컴퓨터시스템","멀티미디어","컴퓨터공학"};
		JComboBox cb_dept=new JComboBox(dept);
		cb_dept.setBounds(45, 10, 100, 20);
		add(cb_dept);
		cb_dept.addActionListener(new ActionListener() {

			@Override
			public void actionPerformed(ActionEvent e) {
				// TODO Auto-generated method stub
				String query="select s.id,b.no,b.title,br.rdate from student s book b bookrent br where s.id=br.id and b.no=br.bookno";
				
				JComboBox cb=(JComboBox)e.getSource();
				if(cb.getSelectedIndex()==0) {
					//전체
					query+=" order by s.id";
				}else if(cb.getSelectedIndex()==1) {
					query+=" and s.dept='컴퓨터시스템' order by s.id";
				}else if(cb.getSelectedIndex()==2) {
					query+=" and s.dept='멀티미디어' order by s.id";
				}else if(cb.getSelectedIndex()==3) {
					query+=" and s.dept='컴퓨터공학' order by s.id";
				}
				//목록 출력
				list();
				
				try {					
					
				}catch(Exception e1) {
					e1.printStackTrace();
				}
				
			}
			
		});
